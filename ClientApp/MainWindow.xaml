<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Label>IP:</Label>
            <TextBox x:Name="ipTB" MinWidth="100">127.0.0.1</TextBox>
            <Label>Port:</Label>
            <TextBox x:Name="portTB" MinWidth="100">3300</TextBox>
        </ToolBar>
        <DockPanel DockPanel.Dock="Top">
            <Label DockPanel.Dock="Left">Message:</Label>
            <Button Click="Button_Click" DockPanel.Dock="Right" Padding="10,0">Send</Button>
            <TextBox x:Name="msgTB" VerticalContentAlignment="Center"></TextBox>
        </DockPanel>
        <ListBox x:Name="dialogList"></ListBox>
    </DockPanel>
</Window>
